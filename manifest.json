{
    "name": "BooktagZ",
    "version": "0.1",
    "manifest_version": 3,
    "description": "BookmarkZ with TagZ",
    "icons": {
        "128": "assets/icons/icon128x128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "assets/icons/icon128x128.png",
        "default_title": "BooktagZ"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "permissions": [
        "activeTab",
        "tabs",
        "webNavigation",
        "scripting", // To get webpage title and content
        "bookmarks", // To catch add to bookmarks event
        "storage" // To use chrome.storage.local
    ],
    "host_permissions": [
        "*://*://" // Required to fetch suggested tags for webpage in Edit Bookmark section
    ],
    "background": {
        "service_worker": "background.js"
    }
}
